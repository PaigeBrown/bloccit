<h1><%= @questions.title %></h1>

<div class="row">
   <div class="col-md-8">
        <p><%= @questions.body %></p>
        <p><%= @questions.resolve %></p>
   </div>

<div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@questions), class: 'btn btn-success' %>
    <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this question?"} %>
</div>
</div>